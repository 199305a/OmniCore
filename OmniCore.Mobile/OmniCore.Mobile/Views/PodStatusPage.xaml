<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmniCore.Mobile.Views.PodStatusPage"
             Appearing="ContentPage_Appearing"
             >
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Button Text="Update" Clicked="Update_Button_Clicked" IsEnabled="{Binding UpdateButtonEnabled}"/>
            <StackLayout Orientation="Horizontal">
                <Label>Identification: </Label>
                <Label Text="{Binding Id}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label>Status:</Label>
                <Label Text="{Binding Status}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label>Updated: </Label>
                <Label Text="{Binding Updated}"/>
            </StackLayout>

            <Label>Pod lifetime</Label>
            <Label>Insulin status</Label>
            <Label>Alerts</Label>
            <Label>Fault status</Label>
            <Label>Pod datetime</Label>
            <Label>Pod identification</Label>
            <Label>Pod version</Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>